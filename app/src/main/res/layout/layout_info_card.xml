<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content" android:paddingStart="10dp"
                                                   android:paddingTop="10dp"
                                                   android:paddingEnd="10dp" android:paddingBottom="10dp"
                                                   android:background="#DCDCDC">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/card_title"
            android:textStyle="bold" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/category_tag"
            android:layout_marginStart="15dp"/>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/card_image"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/category_tag" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/card_address"/>
    <View
            android:layout_width="10dp"
            android:layout_height="50dp" android:id="@+id/category_tag"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/card_address"
            android:layout_marginStart="15dp" app:layout_constraintStart_toEndOf="@+id/category_tag"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/card_title"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/card_marked_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_image" android:layout_marginStart="10dp"
            android:background="@drawable/ic_info"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/card_alarm_btn"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/card_marked_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_image" android:layout_marginStart="10dp"
            android:background="@drawable/ic_notifications_primary"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/card_set_btn"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/card_alarm_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_image" android:layout_marginStart="10dp"
            android:background="@drawable/ic_setting"/>
</androidx.constraintlayout.widget.ConstraintLayout>